				}
			}
		},
		{
			"name": "2. Get Queue Stats (Pre-Check)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"var publishCount = 0;",
							"if (jsonData.message_stats && jsonData.message_stats.publish) {",
							"    publishCount = jsonData.message_stats.publish;",
							"}",
							"// Store as integer to ensure math works later",
							"pm.collectionVariables.set(\"initial_publish_count\", parseInt(publishCount));",
							"console.log(\"Initial Publish Count: \" + publishCount);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "guest",
							"type": "string"
						},
