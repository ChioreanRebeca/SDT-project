		{
			"name": "1. Create Business (Builder Pattern)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response has ID\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.id).to.not.be.null;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"The Grade 10 Cafe\",\n    \"category\": \"Restaurant\",\n    \"address\": \"100 Docker Lane\",\n    \"website\": \"grade10.com\"\n}"
				},
				"url": {
					"raw": "http://localhost:8080/api/businesses",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8080",
					"path": ["api", "businesses"]
				}
			}
		},
		{
			"name": "2. Search Business (Name Strategy)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Business Found\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.length).to.be.above(0);",
							"    pm.expect(jsonData[0].name).to.include(\"Cafe\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/api/businesses/search?query=Cafe&type=name",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8080",
					"path": ["api", "businesses", "search"],
					"query": [
						{ "key": "query", "value": "Cafe" },
						{ "key": "type", "value": "name" }
					]
				}
			}
		},
